<div class="contents row">
  <div class="container">
    <h3>投稿する</h3>
    <%= form_with(model: @post, local: true) do |form| %>
      <%= form.text_field :title, placeholder: "タイトル" %>
      <%= form.text_field :synopsis, placeholder: "あらすじ" %>
      <%= form.text_field :genre_id, placeholder: "ジャンル" %>
      <%= form.text_field :author, placeholder: "著者" %>
      <%= form.text_field :publication_date, placeholder: "出版日" %>
      <%= form.text_field :image, placeholder: "Image Url" %>
      <%= form.text_area :text, placeholder: "感想", rows: "10" %>
      <%= form.submit "SEND" %>
    <% end %>
  </div>
</div>